<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akgames.kimsstreamer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kimlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".videoplay"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".movieChoice"
            android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".searchPage"
            android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".profile"
            android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".manageUpload"
            android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".upload" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".changePayment" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".musicChoice" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".music" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".podcasts" android:windowSoftInputMode="stateUnchanged" />
        <activity android:name=".movies" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".home" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".Register" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".loginScreen" android:windowSoftInputMode="stateUnchanged"/>
        <activity android:name=".MainActivity" android:windowSoftInputMode="stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>